{
  "name": "etheryte",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "playwright test",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testNamePattern='Performance'",
    "test:security": "jest --testNamePattern='Security'",
    "test:silent": "jest --silent --passWithNoTests",
    "postbuild": "next-sitemap",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "vercel-build": "prisma generate && next build",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:staging": "vercel --target staging",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rimraf .next out coverage test-results",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "prebuild": "npm run validate",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "docs": "typedoc --out docs src",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "performance:lighthouse": "lhci autorun",
    "performance:bundle": "npm run analyze"
  },
  "dependencies": {
    "@auth/core": "^0.41.1",
    "@auth/prisma-adapter": "^2.11.1",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.18.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "iron-session": "^8.0.4",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^16.0.0",
    "next-sitemap": "^4.2.3",
    "pg": "^8.16.3",
    "prisma": "^6.18.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^6.2.2",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "9.38.0",
    "eslint-config-next": "^16.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "nft",
    "marketplace"
  ],
  "author": "",
  "license": "ISC",
  "description": "Etheryte NFT Marketplace - A Next.js application for NFT trading and management"
}
